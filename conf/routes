# Routes
# ~~~~

GET     /                                controllers.SpeakersController.home
GET     /speakers                        controllers.SpeakersController.createProfileLink(nickname: Option[String])
GET     /speakers/:id                    controllers.SpeakersController.profile(id: String)
GET     /speakers/:id/talks              controllers.SpeakersController.talks(id: String)
GET     /speakers/:id/talks/:talkId      controllers.SpeakersController.talk(id: String, talkId: String)

GET     /login                           controllers.Auth0Controller.login(redirect: Option[String])
GET     /logout                          controllers.Auth0Controller.logout
GET     /callback                        controllers.Auth0Controller.callback(code: Option[String])

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                    controllers.Assets.versioned(path="/public", file: Asset)
